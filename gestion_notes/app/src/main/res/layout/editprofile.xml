<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1694CD"
        app:menu="@menu/menu"
        app:title="EditProfile"
        app:navigationIcon="@drawable/flesh"

        app:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <ImageView
        android:id="@+id/profileImageView"
        android:enabled="false"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="149dp"
        android:src="@drawable/profile_avatar"
        tools:ignore="MissingClass" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"

        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextEmailAddress1"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="-176dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Prenom"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="349dp"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/profileImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="-259dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextPhone"

        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextTextEmailAddress2"
        android:layout_alignEnd="@+id/editTextTextEmailAddress2"
        android:layout_alignBottom="@+id/editTextTextEmailAddress2"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-101dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="telephone"
        android:inputType="phone"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button8"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-89dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:text="Modifier" />


</RelativeLayout>