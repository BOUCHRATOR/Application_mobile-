<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1694CD"
        app:menu="@menu/menu1"
        app:navigationIcon="@drawable/flesh"
        app:title="Modification"
        app:titleTextColor="#ffffff" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="83dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="597dp"
        android:src="@drawable/profile_avatar"

        app:layout_constraintTop_toBottomOf="@+id/toolbar10"
        app:layout_constraintVertical_bias="0.472"
        tools:ignore="MissingClass,MissingConstraints" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="333dp"
        android:layout_height="31dp"
        android:layout_above="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        android:hint="mohamed@gmail.com"
        android:text="mohmed@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="357dp"
        android:layout_height="59dp"


        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="475dp"
        android:text="Le mot de passe doit contenir au moins 6 caractères, comprenant une combinaison de lettres, de chiffres et de symboles spécifiques (%@$!)."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324" />

    <EditText
        android:id="@+id/editTextTextEmailAddress1"
        android:layout_width="363dp"
        android:layout_height="67dp"
        android:layout_above="@+id/editTextTextEmailAddress5"
        android:layout_alignEnd="@+id/editTextTextEmailAddress3"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Mot de passe précédent"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/editTextTextEmailAddress5"
        android:layout_width="363dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="263dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="  Nouveau mot de passe"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="363dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="173dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Répéter le nouveau mot de passe"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button10"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:textStyle="bold"
        android:layout_marginBottom="66dp"
        android:background="@drawable/button_background"
        android:text="changer le mot de passe" />

</RelativeLayout>
